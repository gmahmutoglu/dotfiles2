# external normal mode
# bindsym $mod+Shift+Control+n exec ~/sh/laptopscreen.sh external

set $mode_monitor Monitor (n) normal, (i) inverted, (e) external, (p) presentation, (d) dual, (Shift+p) portrait
mode "$mode_monitor" {
	bindsym n exec ~/sh/laptopscreen.sh normal, mode "default"
	bindsym i exec ~/sh/laptopscreen.sh inverted, mode "default" 
	bindsym e exec ~/sh/laptopscreen.sh external, mode "default"
	bindsym p exec ~/sh/laptopscreen.sh presentation, mode "default"
	bindsym d exec ~/sh/laptopscreen.sh dual, mode "default"
	bindsym Shift+p ~/sh/laptopscreen.sh portrait, mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+Shift+m mode "$mode_monitor"
bindsym $mod+Shift+k exec --no-startup-id "~/sh/switchkeyboard.sh && killall -SIGUSR1 i3status"
